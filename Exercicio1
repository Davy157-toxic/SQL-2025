 SET ContactName= 'Masuka', Region = 'Porto', Country = 'Portugal'
 WHERE CustomersID = 3;

UPDATE Customers 
 SET ContactName= 'Dexter', Region = 'Lisboa', Country = 'Portugal'
 WHERE CustomersID = 4;

UPDATE Customers 
 SET ContactName= 'Masuka', Region = 'Porto', Country = 'Portugal'
 WHERE CustomersID = 5;

UPDATE Customers 
