-- Exercicio 1.3 --
CREATE TABLE Products (
ProductsID INT PRIMARY KEY ,
CategoryID INT,
SupplierID INT,
ProductName VARCHAR (20),
Unitsinstock INT
);

INSERT INTO Products
VALUES 
 (1,1,1,'Batata',2),
 (2,1,2,'Batata Frita',1),
 (3,2,3,'Arroz',3),
 (4,2,4,'Feij達o',3),
 (5,2,5,'Gr達o',5);
 
 SELECT * FROM Products
 ORDER BY Unitsinstock DESC;
 
-- Exercicio 1.4 --
CREATE TABLE Orders (
OrderID INT PRIMARY KEY ,
Quantify INT,
ProductsID INT ,
FOREIGN KEY (ProductsID) REFERENCES Products(ProductsID)
);

INSERT INTO Orders 
Values 
(10812,2,3),
(10296,2,5),
(10251,3,4);

SELECT * FROM Orders, Products
